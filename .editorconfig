# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,js}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 100

# HTML files
[*.html]
indent_style = space
indent_size = 2
max_line_length = 120

# SCSS and CSS files
[*.{scss,css}]
indent_style = space
indent_size = 2
max_line_length = 120

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2
max_line_length = 120

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Angular configuration
[angular.json]
indent_style = space
indent_size = 2

# Package files
[package.json]
indent_style = space
indent_size = 2
