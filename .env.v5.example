# V5 Logging Configuration
V5_LOG_LEVEL=debug
V5_PAYMENT_LOG_LEVEL=info
V5_DB_LOG_LEVEL=error
V5_ES_LOG_LEVEL=info

# Correlation Tracking
V5_CORRELATION_TRACKING=true

# Alert Processing
V5_ALERT_PROCESSING=true
V5_ALERTS_ENABLED=true

# Alert Thresholds
V5_ALERT_ERROR_RATE=5.0
V5_ALERT_PAYMENT_FAILURE_RATE=10.0
V5_ALERT_RESPONSE_TIME=2000
V5_ALERT_MEMORY_USAGE=85
V5_ALERT_DISK_USAGE=90
V5_ALERT_FRAUD_SCORE=80

# Email Alerts Configuration
V5_EMAIL_ALERTS=true
V5_ALERT_EMAIL_RECIPIENTS="admin@company.com,devops@company.com,support@company.com"
V5_EMERGENCY_CONTACTS="emergency@company.com,cto@company.com"

# Slack Alerts (disabled)
V5_SLACK_ALERTS=false
V5_SLACK_WEBHOOK_URL=
V5_SLACK_CHANNEL=#alerts

# Webhook Alerts
V5_WEBHOOK_ALERTS=false
V5_ALERT_WEBHOOK_URL=
V5_WEBHOOK_URL=

# Log Aggregation
V5_LOG_AGGREGATION=true

# Dashboard
V5_LOG_DASHBOARD=true
V5_REALTIME_DASHBOARD=true

# Elasticsearch (optional but recommended)
V5_ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_HOSTS=localhost:9200

# Log Encryption (optional)
V5_LOG_ENCRYPTION=false
V5_LOG_ENCRYPTION_KEY=

# Mail Configuration for Alerts
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=alerts@your-domain.com
MAIL_FROM_NAME="Boukii V5 Alerts"